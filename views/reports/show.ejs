      <div class="col-lg-4">
        <!-- Requirements Section -->
        <div class="requirements-section" data-aos="fade-up" data-aos-delay="100">
          <h3 class="section-heading">Resources Needed</h3>
          
          <% 
          let hasRequirements = false;
          
          if (report.requirements) {
            const r = report.requirements;
            
            // Food
            if (r.food && r.food.needed) { 
              hasRequirements = true;
              const fulfilled = r.food.fulfilled || 0;
              const total = r.food.quantity || 0;
              const percentage = total > 0 ? Math.min(100, (fulfilled / total) * 100) : 0;
            %>
              <div class="requirement-item">
                <div class="requirement-header">
                  <h4 class="requirement-title">
                    <i class="fas fa-utensils"></i> Food Supplies
