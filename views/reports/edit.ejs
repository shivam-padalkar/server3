          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save me-2"></i> Update Report
            </button>
          </div>
        </form>
        
        <a href="/reports/<%= report._id %>" class="back-link">
          <i class="fas fa-arrow-left"></i> Back to Report Details
